/*Write a C program to find sum of two matrix of order 2*2 using multidimensional arrays where, elements of matrix are entered by user.*/
#include<stdio.h>
int main()
{ int a[2][2],i,j;
  printf("enter the values for your matrix");
  for(i=0;i<2;i++)
  { for(j=0;j<2;j++)
    printf("enter for a%d%d",i+1,j+1);
    scanf("%d",&a[i][j]);
  }
    for(i=0;i<2;i++)
  { for(j=0;j<2;j++)
    printf("%d",a[i][j]);
  }
  return 0;
}
  
